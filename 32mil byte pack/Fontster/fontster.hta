<html>
<HTA:APPLICATION APPLICATIONNAME="WFontster" ICON="none" BORDER="thin" MAXIMIZEBUTTON="no" SINGLEINSTANCE="yes" SYSMENU="yes" VERSION="1.05" SELECTION="no" NAVIGABLE="no" SCROLL="no" CONTEXTMENU="yes" WINDOWSTATE="normal" />
<META HTTP-EQUIV="MSThemeCompatible" CONTENT="yes">
<script type="text/javascript">self.resizeTo(640,480);</script>

<head><title>Fontster</title>

<style>
body {border:0;margin:10;background:threedface}
button {padding:5px 15px 5px 15px;float:right;margin-left:5px}
input,button {font-size:100%}
a {text-decoration:none;color:darkblue}
a:hover {color:blue}
#b1,#fm,#ft,#tx,#ch {height:390px;padding:0}
#fm {float:left;margin-right:5px}
#ft {float:right}
#fm,#ft {overflow:hidden}
#tx {border:1px inset WINDOW;overflow:auto;padding:5px;margin:0;height:98%;width:100%}
#b0 {border-top:solid 1px threedshadow;padding:10px 0 0 0;margin-top:5px;text-align:right}
#b0 div {float:left;margin:0;padding:0}
body,#ch,#b0,#tx {font-family:Tahoma;font-size:11px;background:threedface}
</style>

<script type="text/javascript">
function rendr(s, x)
{
  if (s != '') tx.style.fontFamily = s;
  if (x > 5) tx.style.fontSize = x;
} // rendr
function getfn()
{
  var s = "<"+"select id=\"ch\" size=\"30\" onchange=\"rendr(this.options[this.selectedIndex].value, 0)\">";
  var c = dH.fonts.count, i, arr = new Array();

  for(i = 1; i <= c;) arr.push(dH.fonts(i++)); 
  for (i = 0, arr.sort(); i < c;i++) s += "<"+"option value='"+arr[i]+"'>"+arr[i]+"</"+"option>\n";
  fm.innerHTML = s+"</"+"select>";
  rendr(arr[0], sz.value);
  ch.focus();
} // getfn
</script>

</head>

<body scroll="no" onload="getfn();">

<object id="dH" CLASSID="clsid:3050f819-98b5-11cf-bb82-00aa00bdce0b" width="0" height="0"></object>
<div id="b1">
  <div id="fm" title="This is the list of installed fonts. You may select any to see its sample">
  </div>
  <div id="ft">
<textarea id="tx" title="Click here to edit the sample text" wrap="soft">
The quick brown fox jumps over the lazy dog.
0123456789
</textarea>
   </div> 
</div>
<div id="b0">
   <div><a href="http://www.nattyware.com/">http://www.nattyware.com</a></div>
   <button title="Click here to close the programm" accesskey="X" onclick="self.close();">Exit</button>
   <label for="sz">Font size in pixels:</label>
   <input type="text" size="2" id="sz" value="16" onkeyup="rendr('',this.value)" />
</div>

</body>
</html>